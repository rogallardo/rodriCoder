<div class="realtimeproductspage-container">
    <h1 class="title-products">Products</h1>
    <div class="addproduct-container">
        <h5>Add a product</h5>
        <div class="form-container">
            <div class="formFirstPart">
                <div class="form-group">
                    <label for="input-title">Title:</label>
                    <input class="input"id="input-title" type="text" placeholder="Tv Led">
                </div>
                <div class="form-group">
                    <label for="input-description">description:</label>
                    <input class="input" id="input-description" type="text" placeholder="Samsung">
                </div>
                <div class="form-group">
                    <label for="input-code">code:</label>
                    <input class="input" id="input-code" type="text" placeholder="xHgskdlSKxk">
                </div>
                <div class="form-group">
                    <label for="input-price">price:</label>
                    <input class="input" id="input-price" type="number" placeholder="1234">
                </div>
            </div>
            <div class="formSecondPart">
                <div class="form-group">
                    <label for="input-stock">stock:</label>
                    <input class="input" id="input-stock" type="number" placeholder="1234">
                </div>
                <div class="form-group">
                    <label for="input-category">category:</label>
                    <input class="input" id="input-category" type="text" placeholder="Electro">
                </div>
                <div class="form-group">
                    <label for="input-status">status:</label>
                    <input  id="input-status" disabled type="text" value="status: true">
                </div>
                <div class="form-group">
                    <label for="input-thumbnail">thumbnail:</label>
                    <input class="input" id="input-thumbnail" type="text" placeholder="url or route file">
                </div>
            </div>     
        </div>
        <div class="btn-add-container">
            <button id="btn-add" type="button" class="btn btn-primary">Add product</button>
        </div>
        
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col">Category</th>
            <th scope="col">Thumbnail</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody id="tbodyproducts">

    </tbody>
</table>
<table id="table-container" class="default">
</table>
